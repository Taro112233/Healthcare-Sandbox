  USER      // Submit requests + view own requests + comment on own
  ADMIN     // Full access + status management + comment anywhere
}

// ===== USER STATUS =====
enum UserStatus {
  PENDING    // รอการยืนยัน
  ACTIVE     // ใช้งานได้
  SUSPENDED  // ระงับการใช้งาน
  INACTIVE   // ไม่ใช้งาน
}